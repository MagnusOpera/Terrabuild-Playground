
project @terraform {
    dependencies = [ "/src/apps/webapi"
                     "/src/apps/webapp" ]
    labels = [ "infra" ]
}

target plan {
    rebuild = true
    @terraform plan { 
        variables: { webapi_version: version("/src/apps/webapi")
                     webapp_version: version("/src/apps/webapp")
                     target_environment: $terrabuild_environment }
    }
}

target deploy {
    @terraform apply { }
}
